{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
	 "baseUrl": ".",
	 "paths": {
		"@/*": ["src/*"],
		"@api/*": ["src/api/*"],
		"@middlewares/*": ["src/middlewares/*"],
		"@utils/*": ["src/utils/*"]
	 }
  }
}
