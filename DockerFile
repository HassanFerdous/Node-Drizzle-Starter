# Base image
FROM node:24-alpine

# Set working directory
WORKDIR /app

# Copy dependency manifests
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy rest of the app
COPY . .

# Optional: build for production (only needed if you run `npm run build`)
# You can comment this out in dev mode
# RUN npm run build

# Expose internal port (just one number, not a range like 8000:8000)
EXPOSE 8000

# Default command (overridden by docker-compose if needed)
CMD ["npm", "run", "dev"]
